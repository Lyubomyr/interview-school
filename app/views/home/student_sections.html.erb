<p id="notice"><%= notice %></p>

<h1>Choose <Classes></Classes></h1>

<table>
  <thead>
    <tr>
      <th>Section</th>
      <th>Day</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @section_timings.each do |section_timing| %>
      <tr>
        <td><%= section_timing.section.title %></td>
        <td><%= section_timing.day.humanize %></td>
        <td><%= section_timing.start_time_to_s %></td>
        <td><%= section_timing.end_time_to_s %></td>
        <% if @student_sections_ids.include?  section_timing.id %>
          <td><%= link_to 'Do not Attend', remove_student_section_path(section_timing.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Attend', add_student_section_path(section_timing.id), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

