<h3> To start work find your student account: </h3>


<%= form_with(url: find_student_path, method: :post) do %>
  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag :student_nickname %>
    <%= text_field_tag :student_nickname %>
  </div>

  <div class="actions">
    <%= submit_tag 'Search' %>
  </div>
<% end %>

